
{
  "compilerOptions": {
   
    "target": "es2020",                               
    "module": "commonjs",                              
    "rootDir": "./src",                               
    "outDir": "./dist",                                
                                   
    "moduleResolution": "node",                        
    "esModuleInterop": true,                           
    
   
    "strict": true,                                  
    "skipLibCheck": true,                             
    "isolatedModules": true,                         
    "forceConsistentCasingInFileNames": true,          
    
    
    "lib": ["es2020"],                                
    "types": ["node"],                                

    
    "sourceMap": true,                                
    
    
    "jsx": "react-jsx"                                 
  },
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    "node_modules"
  ]
}
